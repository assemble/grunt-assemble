---
layout: false
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="author" content="{{site.author}}">
    <title>Layout name: 'test/fixtures/pages/blog/index.hbs' | Layout: {{layout}}</title>
    <link rel="stylesheet" href="http://getbootstrap.com/dist/css/bootstrap.min.css">
    <link href="{{assets}}/validation.css" rel="stylesheet">
    <link href="{{assets}}/gist.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <section id="validate"></section>
      <div class="row">
        <!-- Column: sidebar -->
        <div class="col-md-3">
          <div class="bs-sidebar hidden-print" role="complementary">
            <!-- pagination -->
            {{pager pagination}}
          </div>
        </div>
        <!-- Column: content -->
        <div class="col-md-9" role="main">
          <div class="docs-section">
            <div class="docs-header" id="content">
              <h3>Template: {{page.src}}</h3>
              <h3>Layout: {{default this.layout 'No layout was used.'}}</h3>
            </div>
            {{#each pages}}
              {{#unlessEq ../filename compare=filename}}
                <div class="docs-section">
                  <div class="docs-header" id="content">
                    <h1>{{../data.title}}</h1>
                  </div>
                  {{#each ../data.gists}}
                    {{gist this}}
                  {{/each}}
                </div>
              {{/unlessEq}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
    <script src="{{assets}}/validation.js"></script>
  </body>
</html>
